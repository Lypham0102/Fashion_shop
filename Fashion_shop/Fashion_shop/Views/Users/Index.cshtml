@model IEnumerable<Fashion_shop.Models.User>
@{
    ViewData["Title"] = "Xin chào";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<link rel="stylesheet" href="css/View/Users/Index.css">
<h1>Thông tin khách hàng</h1>
<button class="create-button">
    <a asp-action="Create">Thêm khách hàng</a>
</button>
<div style="height: 10px;"></div>
<table class="table">
    <thead>
        <tr>
            <th> Tên</th>
            <th> Email </th>
            <th> NGÀY SINH </th>
            <th> SỐ ĐIỆN THOẠI </th>
            <th> ĐỊA CHỈ </th>
            <th> TRẠNG THÁI </th>
            <th> CÀI ĐẶT </th>  
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date_of_birth)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                @{
                    switch (item.Status)
                    {
                        case -1:
                            <td>
                                Tạm khóa
                            </td>
                            break;
                        case 0:
                            <td>
                                Admin
                            </td>
                            break;
                        case 1:
                            <td>
                                Đang hoạt động
                            </td>
                            break;
                    }
                }
                <td style="width:160px; display: flex; align-items: center;">
                    @*<button class="highlight" onclick="location.href='@Url.Action("Edit", new { id= item.id })'">Edit</button>*@
                    <button class="highlight" style="margin-left: 5px;" onclick="location.href='@Url.Action("Details", new { id = item.id })'">Details</button>
                </td>
            </tr>
        }
    </tbody>
</table>


