                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="" method="get" class="modal-content modal-body border-0 p-0">
                <div class="input-group mb-2">
                    <input type="text" class="form-control" id="inputModalSearch" name="q" placeholder="Search ...">
                    <button type="submit" class="input-group-text bg-success text-light">
                        <i class="fa fa-fw fa-search text-white"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>
    @*Create Menu*@
    <div class="container">
        <nav class="navbar navbar-expand-lg navbar-light bg-light justify-content-center">
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item">
                        <a class="nav-link font-weight-bold" href="https://somehow.vn/collections/ao-men">Áo</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link font-weight-bold" href="https://somehow.vn/collections/quan-men">Quần</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link font-weight-bold" href="https://somehow.vn/collections/set-quan-ao">Set Quần Áo</a>
                    </li>
