    <!--
    TemplateMo 559 Zay Shop
    https://templatemo.com/tm-559-zay-shop
    -->
    <style>
        body {
            width: 100vw;
            overflow-x: hidden;
            font-family: "SVN-Proxima Nova", sans-serif !important;
        }
        .pagination {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: 20px;
        }

        .page-link {
            display: inline-flex;
            justify-content: center;
            align-items: center;
            width: 30px;
            height: 30px;
            border-radius: 50%;
            background-color: #000;
            color: #fff;
            text-decoration: none;
            margin-right: 10px;
            font-size: 14px;
        }

        /* Giảm khoảng cách giữa tên (Name) và giá (Price) */
        .thumbnail .item-info {
            margin-top: 10px;
        }
        .current-page {
            display: inline-flex;
            justify-content: center;
            align-items: center;
            width: 30px;
            height: 30px;
            border-radius: 50%;
            background-color: #fdc22d;
            color: #fff;
            text-decoration: none;
            margin-right: 10px;
            font-size: 14px;
        }
        /* Hiển thị danh sách sản phẩm ra giữa màn hình */
        .products {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
        }

        .col-sm-3 {
            /* Điều chỉnh khoảng cách giữa các sản phẩm */
            margin-bottom: 20px;
        }
        .container {
            width: 100%;
            max-width: 100%;
            padding-left: 0px;
            padding-right: 0px;
            margin-left: auto;
            margin-right: auto;
        }
        .navbar-brand {
            font-family: 'Futura', sans-serif;
        }
        .navbar-nav .nav-link {
            margin-right: 10px;
            padding: 5px 10px;
            transition: all 0.3s ease;
        }

            .navbar-nav .nav-link:hover {
                margin-right: 15px;
                background-color: #f2f2f2;
            }
    </style>
</head>
